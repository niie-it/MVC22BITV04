@model List<Lab07.Data.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>
<a asp-action="Create" class="btn btn-primary">Create new</a>
<table class="table table-bordered">
    <tr>
        <th>Hình</th>
        <th>Tên</th>
        <th>Giá</th>
        <th>Loại</th>
        <th>Nhà cung cấp</th>
        <th>Tác vụ</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                <img src="~/Images/Products/@item.Image" alt="@item.Name" />
            </td>
            <td>@item.Name</td>
            <td>@item.UnitPrice.ToString("#,##0.00")</td>
            <td>@item.Category.NameVn</td>
            <td>@item.Supplier.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Sửa</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
</table>

