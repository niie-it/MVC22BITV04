@{
	ViewData["Title"] = "Search";
}

<h1>Search</h1>

<fieldset>
	<legend>Find what?</legend>
	<input id="findword" placeholder="Find what?" />
</fieldset>
<div id="result"></div>
@section Scripts {
	<script>
		$(document).ready(function(){
			$("#findword").keyup(function(){
				let searchValue = $(this).val().trim();
				if(searchValue.length < 3) return;
				$.ajax({
					url: "/Ajax/Search",
					type: "POST",
					data: { Keyword: searchValue},
					success: function(response){
						$("#result").html(response);
					}
				});
			});
		});
	</script>
}